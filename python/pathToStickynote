import nuke
nodes = nuke.selectedNodes() # Grab all nodes with the class 'Read'. Valid classes include 'Write', 'ReadGeo', etc
source_list = [] # Initialised empty list
pathnames = []
for node in nodes:
    path = node["file"].value() # Retrieve value from "file" attribute
    name = (path.split("/"))[-1] # Access the last value in array for path after splitting it with "/" delimiter
    source_list.append(path) # Add/append name into source_list
    result = "\nList of Read nodes:\n"
print(result)
for name in sorted(source_list):
    pathnames.append(name)
    pathnames.sort()
sticky = nuke.nodes.StickyNote(label= '#########' + result +'#########'+'\n'+  (', ''\n'.join(pathnames)), note_font_size=80,)
nuke.show(sticky)
nuke.zoom(0.5, [sticky.xpos(), sticky.ypos()])
